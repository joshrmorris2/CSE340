<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul> 
<% } %>

<a href="/account/update/">Update account information</a>

<% if (locals.privileges) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Access Inventory Management</a></p>
<% } %>
