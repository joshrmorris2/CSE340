<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul> 
<% } %>

<form action="/account/register" method="post">
    <fieldset>
        <label>First Name <input type="text" id="firstName" name="account_firstname" required></label>
        <label>Last Name <input type="text" id="lastName" name="account_lastname" required></label>
        <label>Email: <input type="email" id="email" name="account_email" required
                placeholder="example@example.com"></label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <label>Password: <input type="password" id="password" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
        <button type="submit">Register</button>
    </fieldset>
</form>