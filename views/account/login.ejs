<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
<%- messages() %>
<form action="" method="">
    <fieldset>
        <label>Email: <input type="email" id="email" name="account_email" required></label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <label>Password: <input type="password" id="password" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
        <button type="submit">Login</button>
        <p>No account? <a href="register">Sign-up</a></p>
    </fieldset>
</form>