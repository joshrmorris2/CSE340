<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="search">
        <form action="/search" method="get">
            <fieldset>
                <label>Search(One Word): <input type="text" id="search_term" name="search_term" maxlength="50" required value="<%= locals.searchTerm %>"></label>
                <button type="submit">Search</button>
            </fieldset>
        </form>
    </div>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <a href="/account/">Welcome <%= locals.accountData.account_firstname %></a>
            <br>
            <a href="/account/logout" title="Click to log out">Logout</a>
        <% } else { %>
            <a href="/account/login" title="Click to log in">My Account</a>
        <% } %>
    </div>
</header>

<script src="../../js/script.js"></script>